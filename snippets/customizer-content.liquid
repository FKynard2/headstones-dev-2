

  {% comment %}begin custom changes{% endcomment %}
  <div class="grid product-single"
    id="cz-customizer-container"
    data-format="{{ product.metafields.global.format }}"
    data-size="{{ product.metafields.global.size }}"
    data-color="{{ product.metafields.global.color }}"
    data-default-design="{{ product.metafields.global.default-design }}"
    data-product="{{ product.handle }}"
  >
    <div class="grid__item grid__item-medium-up-one-half grid__item-image" >
      <h2 class="product-title-mobile">{{ product.title }}</h2>
      <div id="cz-customizer-panel">
        <img id="cz-blank" src="" alt="customizer background">
        <div class="cz-text cz-text-name cz-single-field" id="cz-text-first"></div>
        <div class="cz-text cz-text-name" id="cz-text-last"></div>
        <div class="cz-text cz-text-date cz-single-field" id="cz-text-birth_date"></div>
        <div class="cz-text cz-text-date cz-single-field" id="cz-text-death_date"></div>
        <div class="cz-text cz-text-married-date cz-double-field cz-married-element {% if product.title contains '*D1422' %} married-text {% endif %} {% if product.title contains '*D1015' or product.title contains '*D887' or product.title contains '*D705' %} married-text2 {% endif %}"  id="cz-text-married_date"></div>
        <div class="cz-text cz-text-date-separator cz-single-field" id="cz-text-date_separator"></div>
        <div class="cz-text cz-text-date-separator cz-double-field" id="cz-text-date_separator2"></div>
        <div class="cz-text cz-text-epitaph cz-single-field cz-epitaph-element" id="cz-text-epitaph"></div>
        <div class="cz-text cz-text-name cz-double-field" id="cz-text-first2"></div>
        <div class="cz-text cz-text-date cz-double-field" id="cz-text-birth_date2"></div>
        <div class="cz-text cz-text-date cz-double-field" id="cz-text-death_date2"></div>
      </div> <!-- #cz-customizer-panel  -->
      <h3 class='special-insturctions'>(All text will be made to fit.)</h3>
      <div class="faqContainer"><div id="faqWrapper">
        <h2 class="title">FAQ</h2>
        <div class="accordions">
          {% for block in section.blocks %}
            {% if block.type == "collapsible_tab" %}
                <div class="product__accordion accordion quick-add-hidden" {{ block.shopify_attributes }}>
                  <details id="Details-{{ block.id }}-{{ section.id }}">
                    <summary>
                      <div class="summary__title">
                        {% render 'icon-accordion', icon: block.settings.icon %}
                        <h2 class="h4 accordion__title">
                          {{ block.settings.heading | default: block.settings.page.title }}
                        </h2>
                      </div>
                      <div class="plus-minus-wrapper">
                        <img src="{{ 'plus.png' | asset_img_url }}" alt="" class="icon-plus">
                        <img src="{{ 'minus.png' | asset_img_url }}" alt="" class="icon-minus">
                      </div>
                    </summary>
                    <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
                    {% if block.settings.content == blank %}
                      {{ block.settings.content_override }}
                    {% else %}
                      {{ block.settings.content }}
                      {{ block.settings.page.content }}
                    {% endif %}
                    </div>
                  </details>
                </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    </div> <!-- .grid__item grid__item-medium-up-one-half  -->
    <div class="grid__item-width  grid__item-medium-up-one-half">
      <div class=" text-center">
        <h2 class="product-title">{{ product.title }}</h2>
        <div class="product-description">{{ product.description }}</div>
        <div class="faqContainer-mobile"> {% include 'pdp-faq' %} </div>
        <div class="customizer-price">
          {% if product.compare_at_price and product.compare_at_price > product.price %}
            <div class="custom-price-wrapper custom-price-wrapper-compared" data-compare-price="{{ product.compare_at_price }}" data-actual-price="{{ product.price }}">
              <div class="price-wrapper compare-price-wrapper">
                <p class="price-label">Retail:</p>
                <p class="price compare-price">{{ product.compare_at_price  | money }}</p>
              </div>
              <div class="price-wrapper actual-price-wrapper">
                <p class="price-label">Our Price:</p>
                <p class="price actual-price">{{ product.price  | money }}</p>
              </div>
            </div>
            {% else %}
            <div class="custom-price-wrapper custom-price-wrapper-no-compare" data-compare-price="{{ product.compare_at_price }}" data-actual-price="{{ product.price }}">
              <div class="price-wrapper actual-price-wrapper">
                <p class="price-label">Our Price:</p>
                <p class="price actual-price">{{ product.price  | money }}</p>
              </div>
            </div>
          {% endif %}
        </div>

              <div id="customizerFieldsWrapper" class="customizer-fields">
                <div class="customizer-row customizer-row-flex new">
                
                    <div class="product-form__controls-group product-form__controls-group--customize">
                      <div class="product-form__item">
                        <label class="cz-single-field" style="font-size: 18px;" for="first">First name (All Letters will be sized to fit)  </label>
                        <input data-field="first" class="cz-field cz-single-field" id="cz-first" value="John W" onfocus= "if (this.value == 'John W') {this.value = '';}">
                      </div>
                    </div>
                    
                    <div class="product-form__controls-group product-form__controls-group--customize">
                      <div class="product-form__item">
                        <label class="cz-single-field cz-single-field-last-name" style="font-size: 18px;" for="last">Last name (All Letters will be sized to fit) </label>
                        <input data-field="last" class="cz-field" id="cz-last" value="EDMUNDSEN" onfocus= "if (this.value == 'EDMUNDSEN') {this.value = '';}">
                      </div>
                    </div>
                </div>

                <div class="customizer-row customizer-row-flex">
                  <div class="product-form__controls-group product-form__controls-group--customize">
                    <label class="cz-single-field" for="birth_date">Date of birth</label>
                    {% render 'date-widget', field: 'birth_date', class: 'cz-single-field' %} 
                  </div>
                  <div class="product-form__controls-group product-form__controls-group--customize">
                    <label class="cz-single-field" for="death_date">Date of death</label>
                    {% render 'date-widget', field: 'death_date', class: 'cz-single-field' %}
                  </div>
                </div>

                <div class="customizer-row">
                        <label class="cz-double-field cz-married-element" for="married_date">Date married</label>
                        {% render 'date-widget', field: 'married_date', class: 'cz-married-element cz-double-field' %}
                        <label class="cz-single-field cz-epitaph-element" for="epitaph">Epitaph</label>
                        <input data-field="epitaph" class="cz-field cz-single-field cz-epitaph-element" id="cz-epitaph" value="Rest in peace" onfocus= "if (this.value == 'Rest in peace') {this.value = '';}">
                         <input data-field="epitaph" class="cz-field cz-single-field cz-epitaph-element second-line" id="cz-epitaph2" value="">
                </div>

                <div class="customizer-row">
                    <div class="product-form__controls-group product-form__controls-group--customize">
                      <div class="product-form__item">
                        <label class="cz-double-field" for="first2">First name 2</label>
                        <input data-field="first2" class="cz-field cz-double-field" id="cz-first2" value="Mary H" onfocus= "if (this.value == 'Mary H') {this.value = '';}">
                        <div class="customizer-row customizer-row-flex">
                          <div class="product-form__controls-group product-form__controls-group--customize">
                            <label class="cz-double-field" for="birth_date2">Date of birth 2</label>
                            {% render 'date-widget', field: 'birth_date2', class: 'cz-double-field' %}
                          </div>
                          <div class="product-form__controls-group product-form__controls-group--customize">
                            <label class="cz-double-field" for="death_date2">Date of death 2</label>
                            {% render 'date-widget', field: 'death_date2', class: 'cz-double-field' %}
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
                <!--
                <div class="cz-customize-controls grid__item medium-up--one-half">
                  <button type="button" id="cz-done-button" class="btn">Done</button>
                  <button type="button" id="cz-cancel-button" class="btn">Cancel</button>
                </div>
                -->
              </div>
              {% if section.settings.add_on_collection != blank %}
                {% include 'quickview-add-ons' %}
              {% endif %}
              <div class="add-cart-contain">{% include 'custom-add-to-cart' %}</div>
      </div>
    </div>
  </div>
  {% comment %}end custom changes{% endcomment %}
